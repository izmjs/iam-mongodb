{
  "name": "iam-mongodb",
  "version": "0.1.2",
  "description": "An IAM adapter for MongoDB.",
  "main": "./dist/index.js",
  "scripts": {
    "test:tsc": "tsc --sourceMap __tests__/assets/*.ts",
    "build": "tsc --build tsconfig.json",
    "prebuild": "rimraf dist",
    "lint": "eslint . && tslint -c tslint.json 'lib/**/*.ts' '__tests__/**/*.ts'",
    "format": "prettier --write \"src/**/*.js\" \"__tests__/**/*.js\"",
    "pretest": "npm run build && npm run lint",
    "test": "nyc --reporter=html --reporter=text mocha ./__tests__/**/*.test.js",
    "prepublishOnly": "npm test",
    "preversion": "npm run lint",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "url": "https://github.com/midrissi/func-loc.git",
    "type": "git"
  },
  "keywords": [
    "izmjs",
    "iam",
    "adapter",
    "node",
    "inspector"
  ],
  "author": {
    "name": "Mohamed IDRISSI",
    "email": "med.idrissi@outlook.com",
    "url": "https://github.com/midrissi"
  },
  "license": "MIT",
  "peerDependencies": {
    "mongoose": "^5.9.2",
    "path-to-regexp": "^6.1.0",
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/mongoose": "^5.7.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "mocha": "^10.2.0",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "release-it": "^15.6.0",
    "rimraf": "^3.0.2",
    "tslint": "^6.0.0",
    "typescript": "^3.8.2"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "post-merge": "npm i",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.ts",
    "dist/**/*.map"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
